extends layout

block content
  .todrop_header
    .todrop_header_left
      a.home(href='/') Lyst
    .todrop_header_right
      a.todrop_login(href='/login') log in
      a.todrop_sign_up(href='/signup') sign up
  
  #login_container
    .login_header Log In
    input.username_login_input(type='text' placeholder='enter username')
    input.password_login_input(type='text' placeholder='enter password')
    input.submit_login_info(type='submit' value='submit')
  
