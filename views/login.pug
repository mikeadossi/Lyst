extends layout

block content
  .todrop_header
    .todrop_header_left
      if !isAuthenticated
        a.home(href='/') Lyst
      else
        a.home(href='/lyst') Lyst
    .todrop_header_right
      if !isAuthenticated
        a.todrop_login(href='/login') log in
        a.todrop_sign_up(href='/signup') sign up
      else  
        a.todrop_sign_up(href='/') log out
  
  form#login_container(method='post')
    .login_header Log In
    input.username_login_input(name='username' type='text' placeholder='enter username')
    input.password_login_input(name='password' type='text' placeholder='enter password')
    input.submit_login_info(type='submit' value='submit')
  
