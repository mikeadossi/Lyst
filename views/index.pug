extends layout

block content
  .todrop_header
    .todrop_header_left ToDrop
    .todrop_header_right
      .todrop_login log in
      .todrop_sign_up sign up
      
  #todo_container
    .todo_header
      .todo_date_container
        .todo_day Monday, 4th
        .todo_month january
        .todo_header_tasks_container
          .todo_num_of_tasks 6
          .todo_pending tasks pending
          
    for todos in projects
              
      if todos.iscomplete
        .todo_tasks_container
          form.form(action='index.html', method='post')
          .task_input_container
            .task_checkbox_container
              input(type='checkbox')
            input.task_input(type='text', name='item', value='', placeholder=todos.task) 
            input.task_time(placeholder='12:00')
                
    input#task_entry_input(type='text', name='item', value='', placeholder='groceries')
    #submit_btn_container
      input#submit_btn(type='submit', name='add_item', value='+')
      
